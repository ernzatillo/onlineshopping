  <div class="container">
    <div class="row">
      <ul class="thumbnails">
        <%= content_tag_for(:tr, @categories) do |category| %>
            <div class="col-md-4">
              <div class="thumbnail">
                <div class="admin-actions">
                    <div class="actions text-center col-md-4 col-sm-4 col-xs-4">

                      <% if category.status == true %>
                        <div class="glyphicon glyphicon-ok-sign text-success"></div>
                      <% else %>
                          <div class="glyphicon glyphicon-remove-sign text-danger"></div>
                      <% end  %>

                    </div>

                    <div class="actions text-center col-md-4 col-sm-4 col-xs-4 "><%= link_to '', edit_category_path(category), :class => "glyphicon glyphicon-edit" %></div>
                    <div class="actions text-center col-md-4 col-sm-4 col-xs-4 "><%= link_to '', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-remove" %></div>
                </div>
                <div class="category-img">
                    <%= image_tag category.picture, :class => "img-responsive img-height" %>
                </div>

                <div class="caption">
                  <h3><%= category.category_name %></h3>
                  <p><%= category.description %></p>
                  <hr>
                  <p align="center" class=" text-primary btn btn-block"><%= link_to 'Show Image', category %></p>
                </div>
              </div>
            </div>
        <% end %>

      </ul>
    </div>
  </div>




